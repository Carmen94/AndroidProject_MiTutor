<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityMain"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/math_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Math"
            android:layout_gravity="left"
            android:clickable="true"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/highlight_size"
            />
        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/math_recycler_view"
            android:scrollbars="horizontal"
            android:orientation="horizontal"
            xmlns:tools="http://schemas.android.com/tools"
            tools:listitem="@layout/item_subject"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scrollbarStyle="outsideOverlay"
            >
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/math_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See more"
            android:layout_gravity="right"
            android:clickable="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_margin="@dimen/margin"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/statistics_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:layout_gravity="left"
            android:clickable="true"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_margin="@dimen/margin"
            android:textSize="@dimen/highlight_size"
            />
        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/statistics_recycler_view"
            android:scrollbars="horizontal"
            android:orientation="horizontal"
            xmlns:tools="http://schemas.android.com/tools"
            tools:listitem="@layout/item_subject"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scrollbarStyle="outsideOverlay"
            />
        <TextView
            android:id="@+id/statistics_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See more"
            android:layout_gravity="right"
            android:clickable="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_margin="@dimen/margin"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>